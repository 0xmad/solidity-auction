{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "typeRoots": ["./typings"],
    "paths": {
      "@openzeppelin/test-helpers": [
        "./typings/@openzeppelin__test-helpers.d.ts"
      ]
    }
  },
  "exclude": ["node_modules", "./typechain/**/*.ts"]
}

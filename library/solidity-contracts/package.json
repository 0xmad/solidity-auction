{
  "name": "@errmac/solidity-contracts",
  "version": "1.0.0",
  "description": "Solidity contracts",
  "main": "index.js",
  "scripts": {
    "build": "pnpx hardhat compile",
    "rebuild": "rm -rf artifacts && pnpm run build",
    "test": "pnpx hardhat test",
    "test:coverage": "node --require ts-node/register scripts/coverage.ts",
    "prettier": "prettier --write 'contracts/**/*.sol' '*.ts' '*.js' '*.json'",
    "lint:sol": "pnpx hardhat check",
    "lint:js": "NODE_ENV=production eslint scripts test hardhat.config.ts test-environment.config.js --ext=ts,js",
    "lint:js:fix": "pnpm run lint:js -- --fix",
    "tsc": "tsc -p tsconfig.json",
    "githook:pre-commit": "NODE_ENV=production CI=true lint-staged && pnpm run tsc && pnpm run lint:sol",
    "githook:pre-push": "CI=true pnpm run test:coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0"
  },
  "devDependencies": {
    "@errmac/contracts-eslint": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.2.0",
    "hardhat": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-log-remover": "^2.0.2",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "lint-staged": "^11.0.0",
    "mocha": "^7.2.0",
    "prettier": "^2.3.0",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.2.4",
    "pretty-quick": "^3.1.0",
    "@ethersproject/providers": "^5.2.0",
    "@ethersproject/abi": "^5.2.0"
  }
}
